{
  "productName": "Standup Picker",
  "asar": "false",
  "directories": {
    "output": "app-builds"
  },
  "files": [
    "**/*",
    "!*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!hooks/",
    "!.angular-cli.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json"
  ],
  "win": {
    "icon": "dist/icon.ico",
    "target": ["nsis"]
  },
  "mac": {
    "icon": "dist/icon.icns"
  },
  "linux": {
    "category": "Utility",
    "target": ["deb"]
  }
}
